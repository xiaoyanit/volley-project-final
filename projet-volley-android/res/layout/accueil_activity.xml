<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:stretchColumns="1">

    
	<TableRow>
	     <Button
	    android:layout_column="1"
        android:id="@+id/creerMatch"
        style="@style/styleBouton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Créer un match" />
	</TableRow>
   
	<TableRow >
	     <Button
	    android:layout_column="1"
        android:id="@+id/creerJoueur"
        style="@style/styleBouton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Gestion des joueurs" />
	</TableRow>
   

	<TableRow >
	    <Button
	    android:layout_column="1"
        android:id="@+id/creerEquipe"
        style="@style/styleBouton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Gestion des équipes" />
	</TableRow>
    

	<TableRow >
	    <Button
	    android:layout_column="1"
        android:id="@+id/listeMatchs"
        style="@style/styleBouton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Liste des matchs" />
	</TableRow>
	
	<TableRow >
	    <Button
	    android:layout_column="1"
        android:id="@+id/statsJoueurs"
        style="@style/styleBouton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Statistiques des joueurs" />
	</TableRow>
	
	
    
    

</TableLayout>